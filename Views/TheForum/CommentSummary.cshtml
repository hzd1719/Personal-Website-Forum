
@{
    ViewBag.Title = "CommentSummary";
}
<head>
    <link rel="stylesheet" href="/Content/style.css">

</head>
<h2>Users activity</h2>

@model IEnumerable<TheForum.Models.CommentSummary>
<table>
    <tr class="comment-size">
        <th>Number of comments</th>
        <th>User name</th>
    </tr>
    @foreach (var summaryRow in Model)
    {
        <tr class="comment-size">
            <td>@summaryRow.NumberOfComments</td>
            <td>@summaryRow.UserName</td>
        </tr>
    }
</table>

